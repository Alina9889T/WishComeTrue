@using WishComeTrue.Common.ViewModels.Wish;
@model IEnumerable<WishViewModel>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="display-5 mt-4" style="color: #E6B2EE;"><i class="bi bi-balloon-heart"></i></div>
    <div class="display-5 mb-4">Let your wishes come true!</div>
    <div class="d-flex justify-content-around my-3">
        <a href="/Wishes/Create">Create new wish</a>
        <a href="/WishLists">Create new wish list</a>
    </div>
</div>

<br />
<br />
<h5 class="mb-3 text-muted">Recently created wishes</h5>
<table class="table table-hover" id="recentWishesTableId">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Link</th>
            <th>Created</th>
            <th>FulFilled</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @if (item.FulFilled)
                    {
                        <span>Yes :)</span>
                    }
                    else
                    {
                        <span>Not yet :(</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts {
    <script src="https://cdn.datatables.net/2.1.7/js/dataTables.js"></script>
    <script>
        let recentWishesTable = $('#recentWishesTableId').DataTable({
            info: true,
            serverSide: false,
            searching: false,
            paging: false,
            sorting: false,

            columns: [
                { data: 'name', visible: false},
                { data: 'name'},
                { data: 'description' },
                { data: 'link' },
                { data: 'created' },
                { data: 'fulFilled' },
            ],
        });
    </script>
}
