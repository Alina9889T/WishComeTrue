    <div class="info-panel border">
        <h6 class="mb-3 text-muted">Info panel</h6>
        <div id="infoPanelNote">Select a wish from the tables on the left</div>
        <div class="info-panel-inner" id="infoPanelInner">
            <div class="info-panel-couple">
                <div class="info-panel-label">Wish Name</div>
                <div id="wishName"></div>
            </div>
            <div class="info-panel-couple">
                <div class="info-panel-label">Wish Description</div>
                <div id="wishDescription"></div>
