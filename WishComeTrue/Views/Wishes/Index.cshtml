@{
    ViewData["Title"] = "Wishes Page";
}
<style>
    .wishes-container {
        display: flex;
        flex-direction: row;
        height: 100%;
    }

    .table-panel {
        flex-grow: 3;
    }

    .info-panel {
        margin-left: 15px;
        min-width: 300px;
        flex-grow: 1;
        padding: 5px;
        background-color: lightgray;
    }

    .info-panel-inner {
        width: 100%;
        visibility: hidden;
    }

    .info-panel-couple {
        margin: 10px 0 10px 0;
    }

    .info-panel-label {
        color: green;
        font-size: 12px;
    }

    .info-panel-value {
        font-size: 12px;
    }

    .button-panel {
        margin: 5px 0 5px 0;
        text-align: right;
    }

    .button-width-100 {
        width: 100px;
    }

    .selected {
        background-color: #d6e8d5;
    }

</style>
<div class="wishes-container">
    <div class="table-panel">
        <h6 class="mb-3 text-muted">Active wishes</h6>
        <div class="border-bottom">
            <table class="table table-hover" id="activeWishesTableId">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created</th>
                        <th>FulFilled</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <br />
        <div class="button-panel">
            <button type="button" class="btn btn-success btn-sm">Create new wish</button>
        </div>
        <br />
        <br />
        <br />
        <h6 class="mb-3 text-muted">FulFilled wishes</h6>
        <div>
            <table class="table table-hover" id="fulFilledWishesTableId">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created</th>
                        <th>FulFilled</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
